{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:js-app",
		"helpers:pinGitHubActionDigests",
		":ignoreUnstable"
	],
	"labels": [
		"renovate"
	],
	"major": {
		"addLabels": [
			"renovate/major"
		],
		"automerge": false
	},
	"minor": {
		"automerge": true
	},
	"patch": {
		"automerge": true
	},
	"pin": {
		"automerge": true
	},
	"digest": {
		"automerge": true
	},
	"lockFileMaintenance": {
		"enabled": true,
		"addLabels": [
			"renovate/lockfile"
		],
		"schedule": "at 12am on thursday",
		"automerge": true
	},
	"npm": {
		"stabilityDays": 21
	},
	"timezone": "Asia/Tehran",
	"packageRules": [
		{
			"matchDepTypes": [
				"devDependencies"
			],
			"addLabels": [
				"renovate/development"
			]
		},
		{
			"matchDepTypes": [
				"dependencies",
				"optionalDependencies",
				"peerDependencies"
			],
			"addLabels": [
				"renovate/production"
			]
		},
		{
			"matchPackageNames": [
				"@vitest/coverage-c8",
				"vitest"
			],
			"addLabels": [
				"renovate/testing"
			],
			"groupName": "testing"
		},
		{
			"matchPackagePatterns": [
				"^typescript$",
				"^@types/"
			],
			"addLabels": [
				"renovate/typescript"
			]
		},
		{
			"matchPackageNames": [
				"@prefresh/vite"
			],
			"enabled": false
		},
		{
			"matchDepTypes": [
				"dependencies",
				"optionalDependencies",
				"peerDependencies"
			],
			"matchUpdateTypes": [
				"minor"
			],
			"automerge": false
		},
		{
			"matchManagers": [
				"github-actions"
			],
			"addLabels": [
				"renovate/actions"
			],
			"schedule": "at 12am on thursday",
			"automerge": false
		},
		{
			"matchManagers": [
				"github-actions"
			],
			"matchPackagePatterns": [
				"^actions/"
			],
			"addLabels": [
				"renovate/actions/official"
			],
			"groupName": "actions",
			"schedule": "at any time",
			"automerge": true,
			"stabilityDays": 3
		},
		{
			"matchManagers": [
				"github-actions"
			],
			"matchUpdateTypes": [
				"major"
			],
			"automerge": false
		}
	]
}
