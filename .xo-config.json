{
	"prettier": true,
	"overrides": [
		{
			"files": "**.ts",
			"extends": "./.xo-config.ts.json"
		},
		{
			"files": "**.tsx",
			"extends": "./.xo-config.ts.json",
			"rules": {
				"unicorn/filename-case": [
					"error",
					{
						"cases": {
							"pascalCase": true,
							"kebabCase": true
						}
					}
				]
			}
		}
	]
}
